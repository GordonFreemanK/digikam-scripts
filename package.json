{
  "scripts": {
    "build": "dotnet build",
    "build-package": "cross-env dotnet publish GFK.Image -c Release -o pub/GFK.Image && dotnet publish GFK.Image.cmd -c Release -o pub/GFK.Image/cmd"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/github": "^8.0.2",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "cross-env": "^7.0.3",
    "semantic-release": "^19.0.2"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "pub/**",
              "label": "GFK.Image"
            }
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "Update-ModuleManifest pub/GFK.Image/GFK.Image.psd1 -ModuleVersion ${nextRelease.version}"
        }
      ]
    ]
  }
}
